{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_recipe_comment_create'|trans({'%id%': recipe.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_recipe_comment_create'|trans({'%id%': recipe.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'POST', action: url('recipe_comment', {id: recipe.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_show', {id: recipe.id}) }}" class="btn btn-link">
            {{ 'action_back_to_recipe'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}