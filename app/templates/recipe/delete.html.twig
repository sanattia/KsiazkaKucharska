{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_recipe_delete'|trans({'%id%': recipe.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_recipe_delete'|trans({'%id%': recipe.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('recipe_delete', {id: recipe.id}) }) }}
    {{ form_widget(form) }}
    <p>
        Czy na pewno chcesz usunąć rekord?
    </p>

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('recipe_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}