{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_comment_delete'|trans({'%id%': comment.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_comment_delete'|trans({'%id%': comment.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('comment_delete', {id: comment.id}) }) }}
    {{ form_widget(form) }}
    <p>
        {{ 'delete_confirm'|trans }}
    </p>

    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('book_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}